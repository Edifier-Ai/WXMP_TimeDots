/* 时间点阵页面样式 */

.container {
  position: relative;
  width: 100vw;
  height: 100vh;
  background-color: #FFFFFF;
  overflow: hidden;
}

/* Canvas 画布 */
.dots-canvas {
  width: 100%;
  height: 100%;
}

/* 顶部信息栏 */
.top-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 100rpx 40rpx 30rpx 40rpx;
  background: linear-gradient(to bottom, rgba(255,255,255,1) 0%, rgba(255,255,255,0) 100%);
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-btn text {
  font-size: 40rpx;
  font-weight: 200;
  color: #000000;
}

.life-info {
  flex: 1;
  text-align: center;
  margin-right: 60rpx;
}

.passed-text {
  font-size: 26rpx;
  font-weight: 300;
  color: #666666;
  letter-spacing: 2rpx;
}

/* 底部时间单位指示器 */
.unit-indicator {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 40rpx 80rpx 40rpx;
  background: linear-gradient(to top, rgba(255,255,255,1) 0%, rgba(255,255,255,0) 100%);
}

.unit-dots {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.unit-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  border: 1rpx solid #CCCCCC;
  background-color: transparent;
  transition: all 0.3s ease;
}

.unit-dot.active {
  background-color: #000000;
  border-color: #000000;
  transform: scale(1.2);
}

.unit-label {
  font-size: 32rpx;
  font-weight: 300;
  color: #000000;
  letter-spacing: 4rpx;
  margin-bottom: 10rpx;
}

.unit-hint {
  font-size: 22rpx;
  font-weight: 300;
  color: #999999;
}

/* 加载动画 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.loading-dots {
  display: flex;
  gap: 16rpx;
}

.loading-dots .dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #000000;
  animation: loadingPulse 1.2s ease-in-out infinite;
}


@keyframes loadingPulse {
  0%, 100% {
    opacity: 0.3;
    transform: scale(0.8);
  }
  50% {
    opacity: 1;
    transform: scale(1);
  }
}

/* 文字编辑弹窗 */
.note-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 200;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: relative;
  width: 85%;
  max-width: 600rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
  animation: modalSlideIn 0.3s ease-out;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.modal-header {
  margin-bottom: 30rpx;
}

.time-info {
  font-size: 26rpx;
  font-weight: 400;
  color: #333333;
  line-height: 1.6;
  white-space: pre-line;
}

.modal-body {
  position: relative;
  margin-bottom: 30rpx;
}

.note-input {
  width: 100%;
  min-height: 300rpx;
  padding: 24rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333333;
  background-color: #F8F8F8;
  border-radius: 12rpx;
  border: none;
}

.char-count {
  display: block;
  margin-top: 12rpx;
  font-size: 22rpx;
  color: #999999;
  text-align: right;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
}

.modal-footer button {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 12rpx;
  border: none;
  padding: 0;
  margin: 0;
}

.modal-footer button::after {
  border: none;
}

.btn-cancel {
  background-color: #F0F0F0;
  color: #666666;
}

.btn-delete {
  background-color: #FF6B6B;
  color: #FFFFFF;
}

.btn-save {
  background-color: #000000;
  color: #FFFFFF;
}
